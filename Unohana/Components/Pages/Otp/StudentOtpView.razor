@rendermode InteractiveServer
@page "/student/verify/otp"
@inject NavigationManager NavigationManager
@inject StudentInfoStorage StudentInfoStorage

@code {
    public string Username { get; set; } = string.Empty;
    public double RegisterNumber { get; set; }
    public double OTP { get; set; }

    protected override void OnInitialized()
    {
        if(StudentInfoStorage.RegisterNumber == 0)
        {
            Debug.WriteLine("redirecting to student verification!"+StudentInfoStorage.RegisterNumber);
            NavigationManager.NavigateTo("/student/verify");
        }

        Debug.WriteLine("passed reg no : "+StudentInfoStorage.RegisterNumber);
        Username = StudentInfoStorage.Username;
    }
    void OnSubmit()
    {

    }
    void OnResend()
    {
        
    }
}

<PageTitle>Student otp</PageTitle>
<PrimaryLayout>
    <Content>
        <PrimaryCard>
            <Content>
                <span class="primary-title">
                    Otp sent!<br />
                    Check email, @Username
                </span>
                <div class="flex-container">
                    <div class="form-group">
                        <span class="label">
                            otp
                        </span>
                        <DigitEntry @bind-Data="@OTP" />
                    </div>
                    <PrimaryButton OnButtonClick="@OnSubmit" Title="verify"/>
                    <SecondaryButton OnButtonClick="@OnResend" Title="resend"/>
                </div>
            </Content>
        </PrimaryCard>
    </Content>
</PrimaryLayout>
